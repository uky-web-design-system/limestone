{% set default_headline = fake('words',{ nb: 3 + random(5), asText: true }) %}
{% embed 'molecules-slab' with {attrs : {id:id}, slab_variant : slab_variant|default('slab--wildcat-white') ~ " page-header page-header--overlay-hero " ~ hero_variant} %}
    {% block slab_outer %}
        <div class="page-header--overlay__hero">
            {% include 'atoms-image' with {aspect: "16:7", width: 1800} %}
        </div>
        <div class="slab__wrapper">
            <div class="page-header__content">
                {% include 'molecules-headline-group' with { level : 1, head:head|default(default_headline)|titleize } %}
                {% if with_editorial %}
                <div class="editorial">
                    {% for i in 1..formatted_text_paragraphs|default(1) %}
                        <p>{{ text.editorial(3) }}</p>
                    {% endfor %}
                    </div>
                {% endif %}
                {% if with_cta %}
                    {% include 'molecules-cta-group' with {button_style:'button--small'}%}
                {% endif %}
            </div>
        </div>

        {# {% if with_next %} #}
         <div class="slab-series__next">
         <span class="slab-series__next-super">Next</span><br/>
            {% include 'atoms-link' with { link_variant: link_variant|default('link--fancy'), label : with_next|capitalize, url : "#" ~ next_id } %}
        </div>
        {# {% endif %} #}

    {% endblock %}
{% endembed %}